<section class="cart py-16">

    <%if(session.cart){%>

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png"/>
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">

            <% for(let pizza of Object.values(session.cart.items)) { %>

            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%=pizza.item.image%>"/>
                <div class="flex-1 ml-4">
                    <h1><%=pizza.name%></h1>
                    <span><%=pizza.size%></span>
                </div>
                <span class="flex-1 font-bold "><%=pizza.qty%> Pcs</span>
                <span class="flex-1 font-bold ">x</span>
                <span class="flex-1 font-bold txt-lg">₹ <%= pizza.item.price %></span>
                <span class="flex-1 font-bold ">=</span>
                <span class="font-bold txt-lg">₹ <%= pizza.qty * pizza.item.price %></span>
            </div>

            <%}%>


        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-md font-bold">Total Amount:</span>
                <span class="amount text-lg font-bold ml-2">₹ <%= session.cart.totalPrice%></span>
            </div>
            <%if(user){%>
            <div>
                <form class="mt-4" method="post" action="/orders" autocomplete="off">
                    <input type="text" class="border border-gray-400 p-2 w-1/2 mb-2"  name="myphone" id="myphone" placeholder="Phone Number"/>
                    <input type="text" class="border border-gray-400 p-2 w-1/2" name="myaddress" id="myaddress" placeholder="Address"/>
                    <div>
                        <button class="btn-primay px-6 py-2 rounded-full text-white font-bold mt-3" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <%}else{%>
            <a class="inline-block cursor-pointer  btn-primay px-6 py-2 rounded-full text-white font-bold mt-3" href="/login">Login to countinue</a>
            <%}%>
        </div>
    </div>

    <%}else{%>

   <div class="empty-cart py-8">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl mb-2 font-bold">Cart Empty!</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.<br> To order a pizza, go to the main page.</p>
            <img class="w-1/5 mx-auto" src="/img/empty-cart.png"/>
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primay text-white font-bold mt-12">Go Back</a>
        </div>
    </div>

    <%}%>

</section>