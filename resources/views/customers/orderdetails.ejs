<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12 mt-6">
                <h1 class="text-xl font-bold">Track delivery status</h1>
                <h6 class="bg-white py-1 px-4 text-xs rounded-full text-green-600 font-bold"><%= order._id%></h6>
            </div>
            <input type="hidden" id="hiddenInput" name="hiddenInput" value="<%= JSON.stringify(order) %>">
            <ul>
                <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-xl pb-16" data-status="confirmed"><span>Order Confirmed</span></li>
                <li class="status_line text-xl pb-16" data-status="prepared"><span>Order Preparation</span></li>
                <li class="status_line text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status_line text-xl "      data-status="completed"><span>Complete</span></li>

            </ul>

        </div>
    </div>
</section>
